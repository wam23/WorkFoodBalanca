<% provide(:title, 'My Questions') %>
<h1>Questions</h1>

<h2>Points: <% @points %></h2>

<ul class="questions">
  <% @questions.each do |question| %>
    <li>
      <%= question.info %> (<%= question.questiontype %>)<br/>
      Antwort:
      <% if question.questiontype == 1 %>
        <%= button_to 'Yes', {:controller => "answers", :action => "create", :question_id => question.id, :user_id=> session[:user_id]} , :method=>:post %>
        <%= button_to 'No', {:controller => "answers", :action => "create", :question_id => question.id, :user_id=> session[:user_id]} , :method=>:post %>
      <% elsif question.questiontype == 2 %>
        value
      <% else %>
        todo
      <% end %>
    </li>
  <% end %>
</ul>